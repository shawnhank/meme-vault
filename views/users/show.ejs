<%- include('../partials/header') %>
<!-- Include site-wide header (nav, title, etc) -->
<%- include('../partials/flash') %>
<!-- Show flash success/error messages -->

<!-- Main container with consistent max width -->
<div class="container mt-4" style="max-width: 900px">
  <!-- Show username as page title -->
  <h1 class="mb-4"><%= user.name %>'s Profile</h1>

  <!-- Display user's email -->
  <div class="mb-3 fs-5">
    <strong>Email:</strong>
    <span><%= user.email %></span>
  </div>

  <!-- Display user's bio -->
  <div class="mb-3 fs-5">
    <strong>Bio:</strong>
    <span><%= user.bio || 'â€”' %></span>
  </div>

  <!-- Display user's Instagram -->
  <div class="mb-3 fs-5">
    <strong>Instagram:</strong>
    <span><%= user.instagram || 'â€”' %></span>
  </div>

  <!-- Display user's Twitter -->
  <div class="mb-3 fs-5">
    <strong>Twitter:</strong>
    <span><%= user.twitter || 'â€”' %></span>
  </div>

  <!-- Display user's Facebook -->
  <div class="mb-3 fs-5">
    <strong>Facebook:</strong>
    <span><%= user.facebook || 'â€”' %></span>
  </div>

  <!-- Display user's LinkedIn -->
  <div class="mb-3 fs-5">
    <strong>LinkedIn:</strong>
    <span><%= user.linkedin || 'â€”' %></span>
  </div>

  <!-- Only show Edit Profile button if the current user owns the profile -->
  <% if (currentUser && currentUser._id.toString() === user._id.toString()) { %>
  <a href="/users/<%= user._id %>/edit" class="btn btn-primary mb-4"
    >Edit Profile</a
  >
  <% } %>

  <!-- Divider -->
  <hr class="my-4" />

  <!-- Section showing all memes created by this user -->
  <h3>Memes by <%= user.name %></h3>
  <div
    class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3 mt-3"
  >
    <% userMemes.forEach(meme => { %>
    <div class="col">
      <%- include('../partials/meme-thumbnails', { meme, size: 'small' }) %>
    </div>
    <% }) %>
  </div>

  <!-- Divider -->
  <hr class="my-4" />

  <% // ðŸ’¾ User Favorites Summary Section - Shows memes this user has favorited
  %>
  <div class="row mb-4">
    <div class="col-12">
      <h3>Memes Iâ€™ve Favorited</h3>

      <% if (favorites.length === 0) { %>
      <p class="text-muted">This user hasnâ€™t favorited any memes yet.</p>
      <% } else { %>
      <div
        class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3 mt-3"
      >
        <% favorites.forEach(meme => { %>
        <div class="col">
          <%- include('../partials/meme-thumbnails', { meme, size: 'small' }) %>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/test-footer') %>
<!-- site-wide footer (scripts, links, etc) -->
