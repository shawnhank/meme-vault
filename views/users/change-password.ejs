<%- include('../partials/header') %>  <!-- Include site-wide header (nav, title, etc) -->

<div class="container mt-4" style="max-width: 800px;">
  <%- include('../partials/flash') %>   <!-- Show flash success/error messages -->

  <h1 class="mb-4">Change Password</h1>

  <form action="/users/<%= user._id %>/change-password?_method=PUT" method="POST">
    <!-- New password input -->
    <div class="mb-3">
      <label for="password" class="form-label">New Password *</label>
      <input type="password" name="password" id="password" required class="form-control" placeholder="Enter new password">
    </div>

    <!-- Confirm password input -->
    <div class="mb-3">
      <label for="confirm" class="form-label">Confirm New Password *</label>
      <input type="password" name="confirm" id="confirm" required class="form-control" placeholder="Confirm new password">
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
    <a href="/users/<%= user._id %>" class="btn btn-secondary ms-2">Cancel</a>
  </form>
</div>

<%- include('../partials/test-footer') %>  <!-- site-wide footer (scripts, links, etc) -->