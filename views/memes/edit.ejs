<%- include('../partials/header') %>

<h1 class="mb-4">Edit Meme</h1>

<%- include('../partials/flash') %>

<form action="/memes/<%= meme._id %>?_method=PUT" method="POST" class="mb-5">
  <div class="mb-3">
    <label for="name" class="form-label">Meme Name</label>
    <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="<%= meme.name %>"
        required
      />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea
      class="form-control"
      id="description"
      name="description"
      rows="15"
      required
    ><%= meme.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Image URL</label>
    <input
      type="text"
      class="form-control"
      id="image"
      name="image"
      value="<%= meme.image %>"
    />
  </div>

  <div class="d-flex gap-2 mt-4">
    <button type="submit" class="btn btn-primary">Update Memes</button>
    <a href="/memes/<%= meme._id %>" class="btn btn-secondary">Cancel</a>
  </div>
</form>

<%- include('../partials/footer') %>