// Load dependencies
const express = require('express');
const router = express.Router();

// Load the controller functions
const ratingsCtrl = require('../controllers/ratings');

// Middleware to protect routes â€” only logged-in users can rate
const { isLoggedIn } = require('../middleware/auth');

// ROUTES

// Create or update a rating
// POST /ratings/:id/ratings
// ":id" = the meme's ID
router.post('/:id/ratings', isLoggedIn, ratingsCtrl.createOrUpdate);

// Remove a rating
// DELETE /ratings/:id/ratings
// ":id" = the meme's ID
router.delete('/:id/ratings', isLoggedIn, ratingsCtrl.remove);

// Export the router
module.exports = router;